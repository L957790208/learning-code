<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/steelblue"
    android:orientation="vertical" >

    <com.heartrate.view.HeartRateArc
        android:id="@+id/heart_rate_arc"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <CheckBox
        android:id="@+id/on"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/heart_rate_arc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <com.heartrate.view.SimpleLineChart
        android:id="@+id/hr_view_simpleLineChart"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/heart_rate_arc"
        android:layout_centerHorizontal="true" />

</RelativeLayout>